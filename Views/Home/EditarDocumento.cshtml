@model WordPrates.Models.Documento
<h2 class="text-center">Arquivo Word</h2>
<div class="row">
    <div class="col-md-12">

        <form asp-action="EditarDocumento" asp-controller="Home" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>


            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <p>Criação: @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm") - Última alteração:
                @Model.DataAlteracao.ToString("dd/MM/yyyy HH:mm")</p>


            <div class="form-group mb-3">
                <label asp-for="Conteudo" class="control-label"></label>
                <textarea id="tiny" asp-for="Conteudo" class="form-control" style="width:100%; height: 60vh"></textarea>
                <span asp-validation-for="Conteudo" class="text-danger"></span>
            </div>


            <input type="submit" class="btn btn-primary w-100" value="Editar" />


            <a asp-action="RemoverDocumento" asp-route-id="@Model.Id" class="btn btn-danger mt-3 w-100">Remover</a>

            <a asp-action="Index" class="btn btn-info mt-3 w-100">Voltar</a>
        </form>
    </div>
</div>
